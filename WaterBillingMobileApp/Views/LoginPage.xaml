<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaterBillingMobileApp.Views.LoginPage"
             Title="Login"
             BackgroundColor="#F0F8FF">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <!-- Header -->
            <Border BackgroundColor="#512BD4" 
                    StrokeShape="RoundRectangle 25" 
                    Padding="30"
                    Margin="0,50,0,0">
                <VerticalStackLayout Spacing="15">
                    <Image Source="appicon.png" 
                           HeightRequest="80" 
                           WidthRequest="80"
                           HorizontalOptions="Center" />
                    <Label Text="Water Billing" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Welcome back!" 
                           FontSize="18" 
                           TextColor="LightBlue"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <!-- Login Form -->
            <Border BackgroundColor="White" 
                    StrokeShape="RoundRectangle 20" 
                    Padding="25">
                <VerticalStackLayout Spacing="20">

                    <!-- Email -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email Address" FontAttributes="Bold" />
                        <Border Stroke="#512BD4" 
                                BackgroundColor="White" 
                                StrokeShape="RoundRectangle 10"
                                Padding="0">
                            <Entry Placeholder="Enter your email"
                                   Text="{Binding Email}"
                                   Keyboard="Email"
                                   IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" FontAttributes="Bold" />
                        <Border Stroke="#512BD4" 
                                BackgroundColor="White" 
                                StrokeShape="RoundRectangle 10"
                                Padding="0">
                            <Entry Placeholder="Enter your password"
                                   Text="{Binding Password}"
                                   IsPassword="True"
                                   IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
                        </Border>
                    </VerticalStackLayout>

                    <!-- Forgot Password -->
                    <Button Text="Forgot Password?" 
                            Command="{Binding ForgotPasswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#512BD4"
                            FontSize="14"
                            HorizontalOptions="End"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />

                    <!-- Login Button with Loading -->
                    <Grid>
                        <Button Text="Login"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#512BD4"
                                TextColor="White"
                                CornerRadius="15"
                                HeightRequest="50"
                                FontSize="18"
                                FontAttributes="Bold"
                                IsVisible="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />

                        <Border BackgroundColor="#512BD4"
                                StrokeShape="RoundRectangle 15"
                                HeightRequest="50"
                                IsVisible="{Binding IsBusy}">
                            <HorizontalStackLayout HorizontalOptions="Center" 
                                                   VerticalOptions="Center"
                                                   Spacing="10">
                                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                                   Color="White"
                                                   WidthRequest="24"
                                                   HeightRequest="24" />
                                <Label Text="Logging in..."
                                       TextColor="White"
                                       FontSize="18"
                                       VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </Grid>

                </VerticalStackLayout>
            </Border>

            <!-- New Customer Section -->
            <Border BackgroundColor="LightGreen" 
                    StrokeShape="RoundRectangle 15" 
                    Padding="20"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="New Customer?" 
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="DarkGreen" />

                    <Label Text="Don't have an account yet? Request a water meter installation!" 
                           FontSize="14"
                           HorizontalOptions="Center" 
                           HorizontalTextAlignment="Center"
                           TextColor="DarkGreen" />

                    <Button Text="Request Water Meter" 
                            Command="{Binding RequestMeterCommand}"
                            BackgroundColor="DarkGreen"
                            TextColor="White"
                            CornerRadius="15"
                            HeightRequest="45" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>