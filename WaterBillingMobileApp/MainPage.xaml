<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WaterBillingMobileApp.ViewModels"
             x:Class="WaterBillingMobileApp.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             Title="Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Welcome to the Water Billing App"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button Text="Submit Meter Reading"
                    Command="{Binding SubmitReadingCommand}" />

            <Button Text="View Consumption History"
                    Command="{Binding ViewConsumptionHistoryCommand}" />

            <Button Text="View Invoices"
                    Command="{Binding ViewInvoicesCommand}" />

            <Button Text="Rates and Meter Request Status"
                    Command="{Binding ViewRatesAndStatusCommand}" />

            <Button Text="My Profile"
                    Command="{Binding ViewProfileCommand}" />

            <Button Text="About the App"
                    Command="{Binding ViewAboutCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
